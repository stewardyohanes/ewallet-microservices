{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate Proto",
      "type": "shell",
      "command": "protoc",
      "args": [
        "--go_out=.",
        "--go_opt=paths=source_relative",
        "--go-grpc_out=.",
        "--go-grpc_opt=paths=source_relative",
        "token_validation.proto"
      ],
      "options": {
        "cwd": "${workspaceFolder}/ewallet-ums/cmd/proto"
      },
      "group": "build"
    },
    {
      "label": "Run Server",
      "type": "shell",
      "command": "go",
      "args": ["run", "main.go"],
      "options": {
        "cwd": "${workspaceFolder}/ewallet-ums"
      },
      "group": "build"
    }
  ]
}
